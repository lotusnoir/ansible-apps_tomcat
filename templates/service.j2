{{ ansible_managed | comment }}

[Unit]
Description={{ instance.name | default(tomcat_name) }}

[Service]
User={{ instance.user | default(tomcat_user) }}
Group={{ instance.group | default(tomcat_group) }}
ExecStart=/bin/bash {{ tomcat_directory }}/{{ instance.name | default(tomcat_name) }}/bin/catalina.sh run
ExecReload=/bin/kill -HUP $MAINPID
SyslogIdentifier={{ instance.name | default(tomcat_name) }}

[Install]
WantedBy=multi-user.target
